{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"],
      "cache": true,
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["CLIENT_URL", "CLIENT_TYPE", "NODE_ENV"]
}
